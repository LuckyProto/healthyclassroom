/* pages/doctor/doctor.wxss */
@import "../../utils/videoList_common.wxss";
@import "../template/template.wxss";
.lessonDoc{
	position: relative; 
	display: inline-block;
	width: 750rpx;
	padding-left: 32rpx;
	padding-bottom: 32rpx;
	margin-top: 32rpx;
	border-bottom: 1px solid #d6d7dc;
	box-sizing: border-box;
}
.avatar_lessonDoc{
	display: inline-block;
}
.avatar_lessonDoc image{
	width: 136rpx;
	height: 136rpx;
	border: 1rpx solid #fff !important; 
	border-radius: 50%;
	margin-left:20rpx;
}
.lessonDoc .docDetail_lessonDoc{
	position: absolute;
	top: 10rpx;
	display: inline-block;
	width: 590rpx;
	padding-left: 20rpx;
}
.background{
	position: absolute;
	top: 50rpx; 
	width:600rpx;
	height:106rpx;
	padding-top: 14rpx;
	padding-left: 184rpx;
	box-sizing: border-box;
	background: #fff; 
	font-size: 26rpx;
	color: #666;
	z-index: -999;
}
.background text{
	display: block;
	line-height: 42rpx;
	font-size: 26rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}