/*套课模块*/
.pdlr32{
	padding: 0 32rpx 32rpx 32rpx;
}
.videoList{
	width: 750rpx;
	height: 304rpx;
	padding: 32rpx; 
	border-bottom: 1rpx solid #d6d7dc;
	box-sizing: border-box;
}
.videoList .left-videoList{	
	float: left;
	padding-right: 24rpx;
}
.videoList .left-videoList image{
	width: 192rpx;
	height: 240rpx;	
    border-radius:5rpx;
}
.videoList .right-videoList{
	float: left;
    width:470rpx;
}
.videoList .right-videoList .courseName{
	margin-bottom: 24rpx;
	line-height: 36rpx;
	font-size: 36rpx;
    font-weight: bold;
	color: #333;
	width: 424rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.videoList .right-videoList .doctorName{
	line-height: 26rpx;
	font-size: 26rpx;
	color: #666;
	width: 470rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.job{
	position: relative;
    top: -4rpx;
	overflow: hidden;
	margin-bottom: 20rpx; 
	color: #666;
}
.jobTitle{
	position: relative;
	top: 2rpx; 
	display: inline-block;
	line-height: 26rpx;
	font-size: 26rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.jobRank{
	display: inline-block;
    margin-right: 10rpx;
	line-height: 26rpx;
	font-size: 26rpx;
}
.moreDoctor{
	font-size: 26rpx;
	line-height: 26rpx;
	color: #999;
}
.courseNumber{
	line-height: 24rpx;
	font-size: 24rpx;
}
.courseNumber image{
    position:relative;
    top:46rpx;
	width: 22rpx;
	height: 24rpx;
	margin-right: 10rpx;
}
 .courseNumber text{
    position: relative;
    top: 44rpx;
	font-size: 24rpx;
    line-height: 24rpx;
    color:#999999;
} 
.store{
    width: 100%;
    height: 48rpx;
    overflow: hidden;
}
.purchased{
	overflow: hidden;
	float: left;
	width: 200rpx;
    height: 48rpx;
}
.purchased image{
    position: relative;
    top: 10rpx;
	width: 24rpx;
	height: 22rpx;
	margin-right: 12rpx;
}
.courseTip{
    position: relative;
    top: 6rpx;
	font-size: 24rpx;
	color: #666;
    vertical-align: bottom;
}
.price{
	float: right;
    vertical-align: bottom;
}
.price image{
	position: relative;
	top: 8rpx;
	left: 0rpx;
	width: 18rpx;
	height: 20rpx;
}
.price .coursePrice{
    position: relative;
	top: 8rpx;
	color:#FFA334;
    font-size: 32rpx;
    font-weight: bold;
}